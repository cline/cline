<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Cline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/icons</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/icons</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/card_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- Customize your theme here -->
        <item name="materialButtonStyle">@style/Widget.Cline.Button</item>
        <item name="textInputStyle">@style/Widget.Cline.TextInputLayout</item>
    </style>
    
    <!-- Button style -->
    <style name="Widget.Cline.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/icons</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text input style -->
    <style name="Widget.Cline.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
    
    <!-- No ActionBar theme -->
    <style name="Theme.Cline.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.Cline.Splash" parent="Theme.Cline.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>