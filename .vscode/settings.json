{
	"files.exclude": {
		"out": false,
		"dist": false
	},
	"search.exclude": {
		"out": true,
		"dist": true,
		"node_modules": true,
		"dist-standalone": true
	},
	"typescript.tsc.autoDetect": "off",
	"typescript.preferences.quoteStyle": "double",
	"protoc": {
		"options": [
			"--proto_path=proto"
		]
	},
	"biome.enabled": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "explicit",
		"source.removeUnused.biome": "always",
		"source.removeUnusedImports": "always",
		"source.organizeImports.biome": "always"
	},
	"chat.tools.autoApprove": true,
	"chat.agent.autoApprove": true,
	"github.copilot.chat.agent.autoApprove": true,
	// Disable auto-forwarding ports to prevent Simple Browser from opening the Vite dev server
	"remote.autoForwardPorts": false
}
