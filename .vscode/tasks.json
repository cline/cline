// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile-standalone",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"compile-standalone"
			],
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "bun:protos",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"protos"
			],
			"problemMatcher": [],
			"isBackground": false,
			"presentation": {
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true"
				}
			}
		},
		{
			"label": "watch",
			"dependsOn": [
				"bun:protos",
				"bun:build:webview",
				"bun:dev:webview",
				"bun:watch:tsc",
				"bun:watch:esbuild"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch:test",
			"dependsOn": [
				"bun:protos",
				"bun:build:webview:test",
				"bun:dev:webview",
				"bun:watch:tsc",
				"bun:watch:esbuild:test"
			],
			"presentation": {
				"reveal": "always"
			},
			"group": "build"
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"build:webview"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": true,
			"label": "bun:build:webview",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true"
				}
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"build:webview:test"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": true,
			"label": "bun:build:webview:test",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true",
					"IS_TEST": "true"
				}
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"dev:webview"
			],
			"group": "build",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			],
			"isBackground": true,
			"label": "bun:dev:webview",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true"
				}
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"watch:esbuild"
			],
			"group": "build",
			"problemMatcher": {
				"pattern": [
					{
						"regexp": "^✘ \\[ERROR\\] (.*)$",
						"message": 1
					},
					{
						"regexp": "^\\s+(.*):(\\d+):(\\d+):$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started$",
					"endsPattern": "^\\[watch\\] build finished$"
				}
			},
			"isBackground": true,
			"label": "bun:watch:esbuild",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true"
				}
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"watch:esbuild:test"
			],
			"group": "build",
			"problemMatcher": {
				"pattern": [
					{
						"regexp": "^✘ \\[ERROR\\] (.*)$",
						"message": 1
					},
					{
						"regexp": "^\\s+(.*):(\\d+):(\\d+):$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started$",
					"endsPattern": "^\\[watch\\] build finished$"
				}
			},
			"isBackground": true,
			"label": "bun:watch:esbuild:test",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true",
					"IS_TEST": "true"
				}
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"watch:tsc"
			],
			"group": "build",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"label": "bun:watch:tsc",
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"group": "watch",
				"reveal": "always"
			}
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"watch-tests"
			],
			"label": "bun:watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"dependsOn": [
				"bun:protos"
			],
			"presentation": {
				"reveal": "always",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"bun:protos",
				"bun:watch",
				"bun:watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "stop",
			"command": "echo ${input:terminate}",
			"type": "shell"
		},
		{
			"label": "clean-tmp-user",
			"type": "shell",
			"dependsOn": [
				"watch"
			],
			"command": "rm -rf ${workspaceFolder}/dist/tmp/user && mkdir -p ${workspaceFolder}/dist/tmp/user"
		},
		{
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"storybook"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false,
			"label": "bun:storybook",
			"dependsOn": [
				"bun:protos",
				"bun:build:webview"
			],
			"presentation": {
				"reveal": "always"
			},
			"options": {
				"env": {
					"IS_DEV": "true"
				}
			}
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}
