{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"../src/*"
			],
			"@core/*": [
				"../src/core/*"
			],
			"@shared/*": [
				"../src/shared/*"
			],
			"@hosts/*": [
				"../src/hosts/*"
			],
			"@utils/*": [
				"../src/utils/*"
			],
			"@standalone/*": [
				"../src/standalone/*"
			],
			"@cli/*": [
				"src/*"
			],
			"@integrations/*": [
				"../src/integrations/*"
			],
			"@services/*": [
				"../src/services/*"
			],
			"@packages/*": [
				"../src/packages/*"
			],
			"@generated/*": [
				"../src/generated/*"
			],
			"@api/*": [
				"../src/core/api/*"
			],
			"vscode": [
				"../standalone/runtime-files/vscode/index.js"
			]
		},
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"../src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}
