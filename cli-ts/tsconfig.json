{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"../src/*"
			],
			"@shared/*": [
				"../src/shared/*"
			],
			"@hosts/*": [
				"../src/hosts/*"
			],
			"@utils/*": [
				"../src/utils/*"
			],
			"@standalone/*": [
				"../src/standalone/*"
			],
			"@cli/*": [
				"src/*"
			]
		},
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"../src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}
