{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		]
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
