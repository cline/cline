{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"declaration": true
	},
	"include": ["**/*.ts", "**/*.js", "**/*.tsx", "__tests__/**/*"],
	"exclude": ["node_modules", "dist"]
}
