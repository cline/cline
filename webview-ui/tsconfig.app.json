{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"types": [
			"vitest/globals",
			"@testing-library/jest-dom",
			"vscode-webview",
			"react-use",
			"pretty-bytes",
			"@vscode/webview-ui-toolkit",
			"styled-components",
			"react-remark",
			"rehype-highlight",
			"react-virtuoso",
			"fuse.js",
			"react-countup",
			"@heroui/react",
			"react-textarea-autosize",
			"debounce",
			"rehype-remark",
			"dompurify",
			"@floating-ui/react",
			"mermaid",
			"@types/react-dom"
		],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,

		/* Aliasing */
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@context/*": ["src/context/*"],
			"@shared/*": ["../src/shared/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src"]
}
